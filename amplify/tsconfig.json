{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",         // ✅ For modern ESM resolution
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",                        // ✅ Enables relative `paths`
    "paths": {
      "@amplify/*": ["amplify/*"],         // ✅ Your Amplify files like `amplify/data/resource`
      "$amplify/*": ["../.amplify/generated/*"] // ✅ Optional: if you use codegen outputs
    }
  },
  "include": [
    "src",
    "amplify"                              // ✅ Ensures Amplify backend types are included
  ]
}
