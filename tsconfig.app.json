{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": ".", // ðŸ‘ˆ Important for paths
    "paths": {
      "@/*": ["src/*"],
      "@amplify/*": ["amplify/*"] // ðŸ‘ˆ Helpful if you use aliases like `@amplify/data/resource`
    }
  },
  "include": [
    "src",
    "amplify" // ðŸ‘ˆ REQUIRED to include your schema types
  ]
}

